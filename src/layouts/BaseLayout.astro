---
import "@/styles/tailwind.css";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

import { languageList } from "@/i18n/ui";

const currentLang = Astro.currentLocale || "es";
currentLang as keyof typeof languageList;
---

<!doctype html>
<html lang={currentLang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Título SEO -->
    <title>CodeXtreme WEB - Windows Gaming</title>

    <!-- Meta Tags SEO -->
    <meta
      name="description"
      content="Descarga FlowStateOS, la mejor versión de Windows optimizada para gaming y máximo rendimiento. Eleva tu experiencia de juego a otro nivel."
    />
    <meta name="robots" content="index, follow" />
    <meta
      name="keywords"
      content="Windows optimizado, gaming, rendimiento, FlowStateOS, sistema operativo para gamers, PC gaming, optimización Windows"
    />

    <!-- Open Graph y Twitter -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="FlowStateOS" />
    <meta
      property="og:description"
      content="La mejor versión de Windows modificada para gaming y máximo rendimiento. Descarga FlowStateOS ahora y lleva tu experiencia de juego al siguiente nivel."
    />
    <meta
      property="og:image"
      content="https://www.codextreme.me/imagen-previa.png"
    />
    <meta property="og:url" content="https://www.codextreme.me/" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="FlowStateOS" />
    <meta
      name="twitter:description"
      content="La mejor versión de Windows modificada para gaming y máximo rendimiento. Descarga FlowStateOS ahora y lleva tu experiencia de juego al siguiente nivel."
    />
    <meta
      name="twitter:image"
      content="https://www.codextreme.me/imagen-twitter.png"
    />
    <meta
      name="google-site-verification"
      content="X4pVBsZ9Qujczrzm_M8EeRE0Kvom53DCD6zt2ffWXsI"
    />

    <!-- Favicon y iconos -->
    <link rel="icon" href="/favicon.webp" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta name="theme-color" content="#6B5B95" />

    <!-- Schema Markup JSON-LD -->
    <script type="application/ld+json">
      {
        "@context": "http://schema.org",
        "@type": "WebSite",
        "url": "https://www.codextreme.me",
        "name": "FlowStateOS",
        "description": "La mejor versión de Windows modificada para gaming y máximo rendimiento.",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://www.codextreme.me/buscar?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>
  </head>
  <body
    class="bg-gradient-to-br from-gray-900 to-gray-800 text-gray-100 pt-20 min-h-screen"
  >
    <Header />
    <main class="min-h-[calc(100vh-8rem)]">
      <!-- Contenido -->
      <slot />
    </main>
    <Footer />
  </body>
</html>
