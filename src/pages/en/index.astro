---
import BaseLayout from '../../layouts/BaseLayout.astro';

import { getAbsoluteLocaleUrl, getRelativeLocaleUrl } from 'astro:i18n';
import { languageList } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

const currentLang = Astro.currentLocale || 'en';
const translateLabels = useTranslations(currentLang as keyof typeof languageList)
---

<BaseLayout title="Inicio - CodeXtreme">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#1A1A1A] to-[#2d2d2d] text-white py-24 overflow-hidden">
    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-3xl mx-auto">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in [text-shadow:_0_4px_12px_rgb(0_0_0_/_30%)]">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FFD700] to-[#FF6F61]">
            CodeXtreme
          </span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 animate-fade-in delay-150 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full inline-block">
          {translateLabels("home.description")}
        </p>
        <div class="animate-fade-in delay-200">
          <a href={getAbsoluteLocaleUrl(currentLang, "descargas")} class="inline-flex items-center bg-gradient-to-r from-[#FF6F61] to-[#FF8C78] text-white px-8 py-3 rounded-lg hover:shadow-xl transition-all duration-300 text-lg font-semibold transform hover:scale-105">
            {translateLabels("download.button")}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Efecto de part√≠culas oscuras -->
    <div class="absolute inset-0 z-0 opacity-20 text-gray-900/20 dark:text-gray-100/20">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <pattern id="circles" width="10" height="10" patternUnits="userSpaceOnUse">
          <circle cx="1.5" cy="1.5" r="1" fill="currentColor"/>
        </pattern>
        <rect width="100" height="100" fill="url(#circles)"/>
      </svg>
    </div>
  </section>

  <!-- Secci√≥n de Informaci√≥n -->
  <main class="bg-gradient-to-br from-[#F4F4F4] to-[#eaeaea] dark:from-[#1A1A1A] dark:to-[#2d2d2d] py-16 relative">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#6B5B95] to-[#8B7CB0]">
          {translateLabels("home.ques")}
        </span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Tarjeta 1 - Optimizaci√≥n -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FF6F61] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#FF6F61]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.opti")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.desopti")}</p>
          </div>
        </div>

        <!-- Tarjeta 2 - Desarrollo -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#6B5B95] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#6B5B95]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.dev")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.dev.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 3 - Seguridad -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#4CAF50] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#4CAF50]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.safe")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.safe.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 4 - Xbox Integration -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#0078D4] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#0078D4]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.xbox")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.xbox.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 5 - Actualizaciones -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FF8C00] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#FF8C00]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.update")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.update.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 6 - Rendimiento -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#00B294] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#00B294]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.performance")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.performance.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 7 - Drivers -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#8A2BE2] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#8A2BE2]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.drivers")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.drivers.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 8 - Personalizaci√≥n -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FF4081] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#FF4081]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.appearance")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.appearance.des")}</p>
          </div>
        </div>

        <!-- Tarjeta 9 - Soporte -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#00BCD4] pl-6">
            <svg class="w-12 h-12 mb-4 text-[#00BCD4]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
            <h3 class="text-xl font-bold mb-4 text-gray-900 dark:text-gray-100">{translateLabels("home.support")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.support.des")}</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Efecto de part√≠culas oscuras -->
    <div class="absolute inset-0 opacity-10 dark:opacity-5 pointer-events-none text-gray-900/20 dark:text-gray-100/20">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <pattern id="dots" width="10" height="10" patternUnits="userSpaceOnUse">
          <circle cx="1" cy="1" r="1" fill="currentColor"/>
        </pattern>
        <rect width="100" height="100" fill="url(#dots)"/>
      </svg>
    </div>
  </main>

  <!-- Secci√≥n de Caracter√≠sticas -->
  <section class="bg-white dark:bg-[#2A2A2A] py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FF6F61] to-[#FF8C78]">
          {translateLabels("home.features")}
        </span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <!-- Caracter√≠stica 1 -->
        <div class="group bg-[#F4F4F4] dark:bg-[#1A1A1A] p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FF6F61] pl-6">
            <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">{translateLabels("home.low")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.low.des")}</p>
          </div>
        </div>

        <!-- Caracter√≠stica 2 -->
        <div class="group bg-[#F4F4F4] dark:bg-[#1A1A1A] p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#6B5B95] pl-6">
            <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">{translateLabels("home.compatibility")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.compatibility.des")}</p>
          </div>
        </div>

        <!-- Caracter√≠stica 3 -->
        <div class="group bg-[#F4F4F4] dark:bg-[#1A1A1A] p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#4CAF50] pl-6">
            <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">{translateLabels("home.security")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.security.des")}</p>
          </div>
        </div>

        <!-- Caracter√≠stica 4 -->
        <div class="group bg-[#F4F4F4] dark:bg-[#1A1A1A] p-6 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FFD700] pl-6">
            <h3 class="text-lg font-bold mb-2 text-gray-900 dark:text-gray-100">{translateLabels("home.personalization")}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300">{translateLabels("home.personalization.des")}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

<!-- Anuncio NTLite -->
<div class="bg-gradient-to-r from-[#FFD700]/90 to-[#FF6F61]/90 text-black w-full">
  <div class="container mx-auto px-4 py-8">
    <div class="rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 bg-white/10 backdrop-blur-sm">
      <div class="px-6 py-5 text-center text-sm md:text-base">
        <p class="leading-relaxed">
          üõ†Ô∏è <strong>{translateLabels("ntlite.title")}</strong><br />
          {translateLabels("ntlite.description")}{" "}
          <a 
            href="https://www.ntlite.com/download/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="font-bold underline hover:text-[#2d2d2d] transition-colors"
            aria-label={translateLabels("ntlite.aria.download")}
          >
            {translateLabels("ntlite.ntlite_name")}
          </a>
          {translateLabels("ntlite.description_rest")}
          
          <br /><br />
          
          {translateLabels("ntlite.guides1")}{" "}
          <strong>{translateLabels("ntlite.ntlite_name")}</strong>{" "}
          {translateLabels("ntlite.guides2")}{" "}
          <a 
            href="https://www.ntlite.com/community/index.php?forums/guides.9/" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="font-bold underline hover:text-[#2d2d2d] transition-colors"
            aria-label={translateLabels("ntlite.aria.forum")}
          >
            {translateLabels("ntlite.forum_link")}
          </a>
          
          <br /><br />
          
          {translateLabels("ntlite.warning1")}{" "}
          <strong>{translateLabels("ntlite.warning_strong")}</strong>{" "}
          {translateLabels("ntlite.warning2")}{" "}
          <strong>{translateLabels("ntlite.ntlite_name")}</strong>{" "}
          {translateLabels("ntlite.warning3")}
          
          <br /><br />
          
          {translateLabels("ntlite.note1")}{" "}
          <strong>{translateLabels("ntlite.ntlite_name")}</strong>{" "}
          {translateLabels("ntlite.note2")}
        </p>
      </div>
    </div>
  </div>
</div>

  <!-- Secci√≥n Final CTA -->
  <section class="relative bg-gradient-to-br from-[#1A1A1A] to-[#2d2d2d] text-white py-24 overflow-hidden">
    <div class="container mx-auto text-center px-4 relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FFD700] to-[#FF6F61]">
          {translateLabels("home.go")}
        </span>
      </h2>
      <a href={getAbsoluteLocaleUrl(currentLang, "descargas")} 
        class="inline-flex items-center bg-gradient-to-r from-[#FF6F61] to-[#FF8C78] text-white px-8 py-3 rounded-lg hover:shadow-xl transition-all duration-300 text-lg font-semibold transform hover:scale-105">
        {translateLabels("download.button")}
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4"/>
        </svg>
      </a>
    </div>
    
    <!-- Efecto de part√≠culas final -->
    <div class="absolute inset-0 z-0 opacity-20 text-gray-900/20 dark:text-gray-100/20">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <pattern id="circles-end" width="10" height="10" patternUnits="userSpaceOnUse">
          <circle cx="1.5" cy="1.5" r="1" fill="currentColor"/>
        </pattern>
        <rect width="100" height="100" fill="url(#circles-end)"/>
      </svg>
    </div>
  </section>
</BaseLayout>

<style>
  .group:hover h2 span,
  .group:hover h3 span {
    background-position: 100% 50%;
    transition: background-position 0.5s ease-out;
  }
  
  h2 span,
  h3 span {
    background-size: 200% auto;
    background-position: 0% 50%;
    transition: background-position 0.3s ease-in;
  }
</style>