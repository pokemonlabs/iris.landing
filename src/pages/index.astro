---
import BaseLayout from "@/layouts/BaseLayout.astro";
import Card from "@/components/Card.astro";

import { getAbsoluteLocaleUrl } from "astro:i18n";
import { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";

const currentLang = Astro.currentLocale || "es";
const translateLabels = useTranslations(
  currentLang as keyof typeof languageList
);
---

<BaseLayout title="Goose AI - Cloud AI Agent Platform">
  <!-- Hero Section -->
  <section
    class="relative bg-gradient-to-br from-indigo-900 to-purple-800 text-white py-20 overflow-hidden -mt-4"
  >
    <div class="container mx-auto text-center px-4 relative z-10">
      <div class="max-w-3xl mx-auto">
        <h1
          class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in text-shadow-lg"
        >
          <span
            class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-600"
          >
            Goose AI
          </span>
        </h1>
        <p
          class="text-xl md:text-2xl mb-8 animate-fade-in delay-150 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full inline-block"
        >
          {translateLabels("home.description")}
        </p>
        <div class="animate-fade-in delay-200">
          <a
            href={getAbsoluteLocaleUrl(currentLang, "signup")}
            class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg hover:opacity-90 transition-opacity"
          >
            {translateLabels("download.button")}
            <svg
              class="w-5 h-5 ml-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M13 7l5 5m0 0l-5 5m5-5H6"
              ></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <main class="bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-16 relative">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600">
          {translateLabels("home.ques")}
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <Card
          title={translateLabels("home.opti")}
          description={translateLabels("home.desopti")}
          borderColor="border-blue-500"
          gradientFrom="from-blue-500"
          gradientTo="to-blue-600"
          textColor="text-blue-700"
          hoverTextColor="hover:text-blue-500"
          icon="M12 6v6m0 0v6m0-6h6m-6 0H6"
        />
        <Card
          title={translateLabels("home.dev.des")}
          description={translateLabels("home.dev.des")}
          borderColor="border-purple-500"
          gradientFrom="from-purple-500"
          gradientTo="to-purple-600"
          textColor="text-purple-700"
          hoverTextColor="hover:text-purple-500"
          icon="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
        />
        <Card
          title={translateLabels("home.safety")}
          description={translateLabels("home.safe.des")}
          borderColor="border-green-500"
          gradientFrom="from-green-500"
          gradientTo="to-green-600"
          textColor="text-green-700"
          hoverTextColor="hover:text-green-500"
          icon="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        />
        <Card
          title={translateLabels("home.api")}
          description={translateLabels("home.api.des")}
          borderColor="border-indigo-500"
          gradientFrom="from-indigo-500"
          gradientTo="to-indigo-600"
          textColor="text-indigo-700"
          hoverTextColor="hover:text-indigo-500"
          icon="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"
        />
        <Card
          title={translateLabels("home.update")}
          description={translateLabels("home.update.des")}
          borderColor="border-pink-500"
          gradientFrom="from-pink-500"
          gradientTo="to-pink-600"
          textColor="text-pink-700"
          hoverTextColor="hover:text-pink-500"
          icon="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
        />
        <Card
          title={translateLabels("home.performance")}
          description={translateLabels("home.performance.des")}
          borderColor="border-cyan-500"
          gradientFrom="from-cyan-500"
          gradientTo="to-cyan-600"
          textColor="text-cyan-700"
          hoverTextColor="hover:text-cyan-500"
          icon="M13 10V3L4 14h7v7l9-11h-7z"
        />
        <Card
          title={translateLabels("home.scheduling")}
          description={translateLabels("home.scheduling.des")}
          borderColor="border-orange-500"
          gradientFrom="from-orange-500"
          gradientTo="to-orange-600"
          textColor="text-orange-700"
          hoverTextColor="hover:text-orange-500"
          icon="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
        />
        <Card
          title={translateLabels("home.ecosystem")}
          description={translateLabels("home.ecosystem.des")}
          borderColor="border-teal-500"
          gradientFrom="from-teal-500"
          gradientTo="to-teal-600"
          textColor="text-teal-700"
          hoverTextColor="hover:text-teal-500"
          icon="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"
        />
        <Card
          title={translateLabels("home.support")}
          description={translateLabels("home.support.des")}
          borderColor="border-red-500"
          gradientFrom="from-red-500"
          gradientTo="to-red 600"
          textColor="text-red-700"
          hoverTextColor="hover:text-red-500"
          icon="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"
        />
      </div>
    </div>
  </main>

  <!-- Key Features Section -->
  <section class="bg-white dark:bg-gray-900 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-12">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-purple-600">
          {translateLabels("home.features")}
        </span>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <Card
          title={translateLabels("home.automation")}
          description={translateLabels("home.automation.des")}
          borderColor="border-blue-500"
          gradientFrom="from-blue-500"
          gradientTo="to-blue-600"
          textColor="text-blue-700"
          hoverTextColor="hover:text-blue-500"
          icon="M13 10V3L4 14h7v7l9-11h-7z"
        />
        <Card
          title={translateLabels("home.integration")}
          description={translateLabels("home.integration.des")}
          borderColor="border-purple-500"
          gradientFrom="from-purple-500"
          gradientTo="to-purple-600"
          textColor="text-purple-700"
          hoverTextColor="hover:text-purple-500"
          icon="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"
        />
        <Card
          title={translateLabels("home.security")}
          description={translateLabels("home.security.des")}
          borderColor="border-green-500"
          gradientFrom="from-green-500"
          gradientTo="to-green-600"
          textColor="text-green-700"
          hoverTextColor="hover:text-green-500"
          icon="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
        />
        <Card
          title={translateLabels("home.extensible")}
          description={translateLabels("home.extensible.des")}
          borderColor="border-indigo-500"
          gradientFrom="from-indigo-500"
          gradientTo="to-indigo-600"
          textColor="text-indigo-700"
          hoverTextColor="hover:text-indigo-500"
          icon="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"
        />
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="relative bg-gradient-to-br from-indigo-900 to-purple-800 text-white py-24 overflow-hidden">
    <div class="container mx-auto text-center px-4 relative z-10">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-400 to-purple-400">
          {translateLabels("home.go")}
        </span>
      </h2>
      <a
        href={getAbsoluteLocaleUrl(currentLang, "signup")}
        class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg hover:opacity-90 transition-opacity"
      >
        {translateLabels("download.button")}
        <svg
          class="w-5 h-5 ml-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M13 7l5 5m0 0l-5 5m5-5H6"
          ></path>
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .group:hover h2 span,
  .group:hover h3 span {
    background-position: 100% 50%;
    transition: background-position 0.5s ease-out;
  }

  h2 span,
  h3 span {
    background-size: 200% auto;
    background-position: 0% 50%;
    transition: background-position 0.3s ease-in;
  }
</style>
