---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAbsoluteLocaleUrl, getRelativeLocaleUrl } from 'astro:i18n';
import { languageList } from '../../i18n/ui';
import { useTranslations } from '../../i18n/utils';

const currentLang = Astro.currentLocale || 'en';
const translateLabels = useTranslations(currentLang as keyof typeof languageList)
---

<BaseLayout title={translateLabels("guides.meta_title")}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-[#1A1A1A] to-[#2d2d2d] text-white py-24 overflow-hidden">
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 animate-fade-in [text-shadow:_0_4px_12px_rgb(0_0_0_/_30%)]">
          <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FF6F61] to-[#6B5B95]">
            {translateLabels("guides.title")}
          </span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 animate-fade-in delay-150 bg-white/10 backdrop-blur-sm px-6 py-3 rounded-full inline-block">
          {translateLabels("guides.description")}
        </p>
      </div>
    </div>

    <!-- Efecto de partÃ­culas -->
    <div class="absolute inset-0 z-0 opacity-20 text-gray-900/20 dark:text-gray-100/20">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <pattern id="circles" width="10" height="10" patternUnits="userSpaceOnUse">
          <circle cx="1.5" cy="1.5" r="1" fill="currentColor"/>
        </pattern>
        <rect width="100" height="100" fill="url(#circles)"/>
      </svg>
    </div>
  </section>

  <!-- Contenido Principal -->
  <main class="bg-gradient-to-br from-[#F4F4F4] to-[#eaeaea] dark:from-[#1A1A1A] dark:to-[#2d2d2d] py-16 relative">
    <div class="container mx-auto px-4">
      <!-- Aviso de Apoyo a Creadores -->
      <div class="bg-gradient-to-r from-[#3B82F6] to-[#6366F1] text-white p-6 rounded-xl mb-8 shadow-lg transition-all duration-300 transform hover:scale-[1.01]">
        <div class="flex items-center gap-4">
          <div class="flex-shrink-0 text-3xl">ğŸ™Œ</div>
          <div>
            <h3 class="font-bold text-lg mb-1">{translateLabels("guides.support.title")}</h3>
            <p class="text-sm opacity-90">
              {translateLabels("guides.support.description1")}{" "}
              <strong>{translateLabels("guides.support.emphasis1")}</strong>{" "}
              {translateLabels("guides.support.description2")}{" "}
              <strong>{translateLabels("guides.support.emphasis2")}</strong>{" "}
              {translateLabels("guides.support.description3")}
            </p>
          </div>
        </div>
      </div>

      <!-- Grid de GuÃ­as -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        <!-- GuÃ­a 1: ISO Optimizada -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FF6F61] pl-6">
            <h2 class="text-2xl font-bold mb-4">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FF6F61] to-[#FF8C78]">
                ğŸ› ï¸ {translateLabels("guides.guide1.title")}
              </span>
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">{translateLabels("guides.guide1.description")}</p>
            <a href="https://www.youtube.com/watch?v=fqTt4DarrOU" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-[#FF6F61] hover:text-[#FF8C78] font-medium">
              {translateLabels("guides.view_more")}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- GuÃ­a 2: Mega Pack OptimizaciÃ³n -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#6B5B95] pl-6">
            <h2 class="text-2xl font-bold mb-4">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#6B5B95] to-[#8B7CB0]">
                âš¡ {translateLabels("guides.guide2.title")}
              </span>
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">{translateLabels("guides.guide2.description")}</p>
            <a href="https://www.youtube.com/watch?v=dnE5RRnIvKI" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-[#6B5B95] hover:text-[#8B7CB0] font-medium">
              {translateLabels("guides.view_more")}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- GuÃ­a 3: PersonalizaciÃ³n -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#FFD700] pl-6">
            <h2 class="text-2xl font-bold mb-4">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#FFD700] to-[#FFB300]">
                ğŸ¨ {translateLabels("guides.guide3.title")}
              </span>
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">{translateLabels("guides.guide3.description")}</p>
            <a href="https://www.youtube.com/watch?v=vqYixOxhdgc" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-[#FFD700] hover:text-[#FFB300] font-medium">
              {translateLabels("guides.view_more")}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>

        <!-- GuÃ­a 4: Directivas Ocultas -->
        <div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
          <div class="border-l-4 border-[#4CAF50] pl-6">
            <h2 class="text-2xl font-bold mb-4">
              <span class="bg-clip-text text-transparent bg-gradient-to-r from-[#4CAF50] to-[#81C784]">
                ğŸ”§ {translateLabels("guides.guide4.title")}
              </span>
            </h2>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-6">{translateLabels("guides.guide4.description")}</p>
            <a href="https://www.youtube.com/watch?v=WfpFgQdWT20&list=PL0rDzzHg4fUli-ciiihzmJnr-scB0FuY8" target="_blank" rel="noopener noreferrer" class="inline-flex items-center text-[#4CAF50] hover:text-[#81C784] font-medium">
              {translateLabels("guides.view_more")}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Efecto de partÃ­culas -->
    <div class="absolute inset-0 opacity-10 dark:opacity-5 pointer-events-none text-gray-900/20 dark:text-gray-100/20">
      <svg class="w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
        <pattern id="guide-dots" width="10" height="10" patternUnits="userSpaceOnUse">
          <circle cx="1" cy="1" r="1" fill="currentColor"/>
        </pattern>
        <rect width="100" height="100" fill="url(#guide-dots)"/>
      </svg>
    </div>
  </main>

  <style>
    .group:hover h2 span {
      background-position: 100% 50%;
      transition: background-position 0.5s ease-out;
    }
    
    h2 span {
      background-size: 200% auto;
      background-position: 0% 50%;
      transition: background-position 0.3s ease-in;
    }
  </style>
</BaseLayout>