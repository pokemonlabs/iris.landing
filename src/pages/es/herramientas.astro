---
import Layout from "@/layouts/BaseLayout.astro";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations(Astro.currentLocale || "es");
---

<Layout title={t("nav.tools")}>
  <main class="container mx-auto px-4 py-8 mt-20">
    <h1 class="text-4xl font-bold text-center mb-8">{t("nav.tools")}</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Add your tools content here -->
      <div class="p-6 bg-white dark:bg-gray-800 rounded-lg shadow-lg">
        <h2 class="text-2xl font-semibold mb-4">Próximamente</h2>
        <p class="text-gray-600 dark:text-gray-300">
          Las herramientas y utilidades estarán disponibles aquí pronto.
        </p>
      </div>
    </div>
  </main>
</Layout>