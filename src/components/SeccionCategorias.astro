---
import ToolCard from '@/components/TarjetaTools.astro';

const { title, description, image, tags, dockerLink, platformLink, linkText, linkColor, borderColor } = Astro.props;
---

<div class="group bg-white dark:bg-[#2A2A2A] p-8 rounded-xl shadow-xl hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
  <div class={`border-l-4 ${borderColor} pl-6`}>
    <div class="flex items-start space-x-4">
      {image && (
        <img src={image} alt={title} class="w-16 h-16 object-contain" loading="lazy" />
      )}
      <div>
        <h3 class="text-xl font-bold mb-2">{title}</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
        <div class="flex flex-wrap gap-2 mb-4">
          {tags.map(tag => (
            <span 
              class="px-3 py-1 text-sm rounded-full" 
              style={`background-color: ${tag.color}20; color: ${tag.color}`}
            >
              {tag.label}
            </span>
          ))}
        </div>
        <div class="flex gap-4">
          <a
            href={platformLink}
            class={`inline-flex items-center space-x-2 ${linkColor} hover:opacity-80 transition-opacity`}
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>{linkText}</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
          <a
            href={dockerLink}
            class="inline-flex items-center space-x-2 text-blue-600 dark:text-blue-400 hover:opacity-80 transition-opacity"
            target="_blank"
            rel="noopener noreferrer"
          >
            <span>Docker Hub</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>